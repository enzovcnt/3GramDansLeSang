{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% form_theme registrationForm 'tailwind_2_layout.html.twig' %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md space-y-8 bg-gray-800 p-8 rounded-xl shadow-lg border border-gray-700">
            <div>
                <h2 class="text-center text-3xl font-extrabold text-yellow-400">Create your account</h2>
                <p class="mt-2 text-center text-sm text-gray-400">
                    It's quick and easy.
                </p>
            </div>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
            <div class="space-y-4">
                {{ form_row(registrationForm.email, {
                    'attr': {
                        'class': 'appearance-none w-full px-4 py-2 rounded-lg bg-gray-700 text-white placeholder-gray-400 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400'
                    }
                }) }}

                {{ form_row(registrationForm.plainPassword, {
                    'label': 'Password',
                    'attr': {
                        'class': 'appearance-none w-full px-4 py-2 rounded-lg bg-gray-700 text-white placeholder-gray-400 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400'
                    }
                }) }}

                {{ form_row(registrationForm.agreeTerms, {
                    'label_attr': {'class': 'text-gray-300'},
                    'row_attr': {'class': 'flex items-center'}
                }) }}
            </div>

            <div>
                <button type="submit"
                        class="w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-lg text-gray-900 bg-yellow-400 hover:bg-yellow-500 focus:outline-none focus:ring-2 focus:ring-yellow-300">
                    Register
                </button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
