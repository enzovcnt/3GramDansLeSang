{% block body %}

    <div class="max-w-sm rounded overflow-hidden shadow-lg">

        <div class="px-6 py-4">

            <p class="text-gray-700 text-base">
                {{ post.content }}
            </p>
            <p>
                {{ post.author.email }}
            </p>
            <a href="{{ path('app_posts') }}">Retour</a>
            <a href="{{ path('app_post_edit', {id:post.id}) }}">Editer</a>
