{% extends 'base.html.twig' %}

{% block title %}Notifications{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto mt-10">
        <h1 class="text-2xl font-bold mb-6">Notifications</h1>

        {% for notif in notifications %}
            {% if notif.islike %}
                <div class="bg-white border rounded-2xl shadow p-4 mb-4 flex items-center justify-between">
                    <div>
                        <p class="text-gray-800">
                            <span class="font-semibold text-indigo-600">{{ notif.isLike.author.profile.displayName }}</span>
                            a aimé votre
                            <a href="#" class="text-blue-500 underline hover:text-blue-700">
                                publication
                            </a>
                            le {{ notif.date|date('d/m/Y à H:i') }}.
                            <a href="{{ path('app_notification_delete', {id:notif.id}) }}" class="text-blue-500 underline hover:text-blue-700">
                                supprimer
                            </a>
                        </p>
                    </div>
                </div>
            {% else %}
                <div class="text-gray-500">Aucune notification disponible.</div>
            {% endif %}
            </div>

        {% endfor %}


{% endblock %}
