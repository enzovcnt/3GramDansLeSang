{% extends 'base.html.twig' %}
{% form_theme formCommentEdit 'tailwind_2_layout.html.twig' %}

{% block title %}Edit Comment{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-2xl w-full bg-gray-800 p-8 rounded-xl shadow-lg border border-gray-700">
            <h2 class="text-center text-2xl font-extrabold text-yellow-400 mb-6">Edit your comment</h2>

            {{ form_start(formCommentEdit, {'attr': {'class': 'space-y-6'}}) }}

            <div>
                {{ form_row(formCommentEdit.content, {
                    'attr': {
                        'class': 'w-full px-4 py-3 rounded-lg bg-gray-700 text-white placeholder-gray-400 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400'
                    },
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-300 mb-1'
                    }
                }) }}
            </div>

            <div class="text-right">
                <button type="submit"
                        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-gray-900 bg-yellow-400 hover:bg-yellow-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-300">
                    Save changes
                </button>
            </div>

            {{ form_end(formCommentEdit) }}
        </div>
    </div>
{% endblock %}
